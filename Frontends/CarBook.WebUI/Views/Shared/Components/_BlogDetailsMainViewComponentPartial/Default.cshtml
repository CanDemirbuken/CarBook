@model ResultGetBlogByIdDTO

<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Description</p>

    @await Component.InvokeAsync("_BlogDetailsCloudTagByBlogViewComponentPartial", new { id = ViewBag.blogId })
    @await Component.InvokeAsync("_BlogDetailsAuthorAboutViewComponentPartial", new { id = ViewBag.blogId })


    <div class="pt-5 mt-5">
        <h3 class="mb-5">6 Yorum</h3>
        @await Component.InvokeAsync("_CommentListByBlogViewComponentPartial")
        @await Component.InvokeAsync("_AddCommentViewComponentPartial")
    </div>

</div>