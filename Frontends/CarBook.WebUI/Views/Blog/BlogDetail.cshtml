@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">

            @await Component.InvokeAsync("_BlogDetailsMainViewComponentPartial", new { id = ViewBag.blogId })

            <div class="col-md-4 sidebar ftco-animate">

                @await Component.InvokeAsync("_BlogDetailSideBarSearchBoxComponentPartial")
                @await Component.InvokeAsync("_BlogDetailsCategoryViewComponentPartial")
                @await Component.InvokeAsync("_BlogDetailsRecentBlogsViewComponentPartial")
                @await Component.InvokeAsync("_BlogDetailsTagCloudViewComponentPartial", new { id = ViewBag.blogId })
                @await Component.InvokeAsync("_BlogDetailsParagraphViewComponentPartial")

            </div>

        </div>
    </div>
</section>