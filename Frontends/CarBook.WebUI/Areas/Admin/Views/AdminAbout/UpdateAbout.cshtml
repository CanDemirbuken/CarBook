@model RequestUpdateAboutDTO

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımızda Bilgisi Düzenleme Ekranı</h4>
                        <p class="card-subtitle mb-4">Hakkımızda bölümü ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="AboutID" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" cols="20" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Bilgisi Giriniz" value="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageURL">Görsel URL</label>
                                <input type="text" class="form-control" id="exampleInputImageURL" asp-for="ImageUrl" placeholder="Url Bilgisi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımızda Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>